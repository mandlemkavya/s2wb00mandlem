extends layout

block content

  h1= title
  -
    let results = [
      {
        "Jam_flavour": "Apple",
        "Jam_quantity": "10lb",
        "Jam_cost": 50
      },
      {
        "Jam_flavour": "Strawberry",
        "Jam_quantity": "20lb",
        "Jam_cost": 25
      },
      {
        "Jam_flavour": "Mixed-fruit",
        "Jam_quantity": "30lb",
        "Jam_cost": 150
      },                   
    ]
  div(class= "container-fluid")
    div(class = "row")
      each item,index in results
        div(class= "col-sm-2" , onclick=`buy(${index})`) #{item.Jam_flavour}<br>
        div(class= "col-sm-2", onclick=`buy(${index})`) #{item.Jam_quantity}<br>
        div(class= "col-sm-2", onclick=`buy(${index})`) #{item.Jam_cost}<br>

  script.
    function buy(itemNum){
      alert(`You purchased item ${itemNum+1}`)
    }